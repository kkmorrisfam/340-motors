<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <div class="form-container border">
    
    <form id="addClassificationForm" method="post" action="/inv/add-classification" class="form">
      <div class="required">*Field is required</div>
      
      <label for="classification_name" class="top"
        >Classification Name
        <div class="formMessage">Name must be in alphabetic characters only. No spaces or special characters.</div>
        <input
          type="text"
          name="classification_name"
          id="classification_name"
          required
          placeholder="Enter a new vehicle type"
          value="<%= locals.classification_name %>"
          pattern="^[A-Za-z]+$"
        />
      </label>

      <input type="submit" value="Add Classification" class="submitBtn" />
      
    </form>
  </div>
  