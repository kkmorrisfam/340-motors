<h3>Create Review</h3>
<div class="form-container border">
  <form method="post" action="reviews/add-review" class="form">
    <label for="screen_name" class="top"
      >Screen Name
      <input type="text" name="screen_name" id="screen_name"       
      value="<%= reviewData.length > 0 ? reviewData[0].account_firstname.charAt(0).toUpperCase() + reviewData[0].account_lastname : '' %>"/>
    </label>
    <label for="review_text" class="top"
      >Review
      <textarea
        rows="4"
        cols="50"
        name="review_text"
        id="review_text"
        placeholder="Enter review here..."
        required
        minlength="5"
        maxlength="65"
      ></textarea
      ></label>
    <input type="hidden" name="account_id" value="<%= reviewData[0].account_id %>" />  
    <input type="hidden" name="inv_id" value="<%= inv_id %>" />
    <input type="submit" value="Submit Review" class="submitBtn" />
  </form>
</div>
